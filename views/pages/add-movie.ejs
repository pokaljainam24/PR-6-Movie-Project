<%- include('../partials/header') %>
    <!-- ============================================================== -->
    <!-- End Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb" style="background-color: rgba(145, 135, 135, 0.808);">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title text-white">Add Movie-Data Form</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="text-white fw-bold">Home</a></li>
                                <li class="breadcrumb-item active text-white fw-bold" aria-current="page">
                                    Movie-Data
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid" style="background-color: rgba(145, 135, 135, 0.808);">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card d-flex bg-dark">
                        <form class="form-horizontal w-75 bg-dark" method="post" action="/add-movie"
                            enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title text-white" style="margin-left: 100px;">Personal Info</h4>
                                <div class="form-group row">
                                    <label for="title"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Movie
                                        Title</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="title" name="title"
                                            placeholder="Title Here" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="thumbnail"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Thumbnail</label>
                                    <div class="col-sm-9">
                                        <input type="file" class="form-control" name="thumbnail" id="thumbnail" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="discription"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Discription</label>
                                    <div class="col-sm-9">
                                        <textarea id="discription" name="discription" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="rating"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Rating</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control" name="rating" id="thumbnail" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="author"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Author</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" name="author" id="thumbnail" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="date"
                                        class="col-sm-3 text-end control-label col-form-label text-white">Date</label>
                                    <div class="col-sm-9">
                                        <input type="date" class="form-control" name="date" id="thumbnail" />
                                    </div>
                                </div>
                            </div>
                            <div class="border-top w-100">
                                <div class="card-body">
                                    <button type="submit" style="margin-left: 100px;" class="btn btn-primary">
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- editor -->
            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <%- include('../partials/footer') %>